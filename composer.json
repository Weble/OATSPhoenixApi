{
    "name": "weble/oatsphoenixapi",
    "description": "PHP SDK to interact with the Phoenix APIs for OATS databases.",
    "keywords": [
        "weble",
        "OATS",
        "OATSPhoenixApi"
    ],
    "homepage": "https://github.com/weble/OATSPhoenixApi",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniele Rosario",
            "email": "daniele@weble.it",
            "homepage": "https://weble.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.5",
        "tightenco/collect": "^6.16"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.3",
        "phpunit/phpunit": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "Weble\\OATSPhoenixApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Weble\\OATSPhoenixApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
